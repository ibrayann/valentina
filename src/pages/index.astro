---
import MallaCurricular from '../components/MallaCurricular.astro'
import ImagenesFlotantes from '../components/ImagenesFlotantes.astro'
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Malla Curricular Derecho UTAL</title>
  </head>
  <body class="bg-gray-100">
    <main class="relative min-h-screen pt-8">
      <div class="relative">
        <MallaCurricular />
      </div>
      <div class="absolute inset-0 pointer-events-none">
        <ImagenesFlotantes />
      </div>
    </main>
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
